using AutoMapper;
using Microsoft.EntityFrameworkCore;
using Sistema_Gestao_Residencial.Data;
using Sistema_Gestao_Residencial.Models;
using Sistema_Gestao_Residencial.Models.DTOs.Categoria;
using Sistema_Gestao_Residencial.Models.DTOs.Relatorios;
using Sistema_Gestao_Residencial.Models.Enums;
using Sistema_Gestao_Residencial.Services.Interfaces;

namespace Sistema_Gestao_Residencial.Services
{
    public class CategoriaService : ICategoriaService
    {
        private readonly Sistema_Gestao_DbContext _context;
        private readonly IMapper _mapper;

        public CategoriaService(Sistema_Gestao_DbContext context, IMapper mapper)
        {
            _context = context;
            _mapper = mapper;
        }

        public async Task<IEnumerable<ListCategoriaDto>> GetAllCategorias()
        {
            var categorias = await _context.Categorias
                .Include(c => c.Usuario)
                .ToListAsync();

            return _mapper.Map<IEnumerable<ListCategoriaDto>>(categorias);
        }

        public async Task<ListCategoriaDto?> GetCategoriaById(int id)
        {
            var categoria = await _context.Categorias
                .Include(c => c.Usuario)
                .FirstOrDefaultAsync(c => c.Id == id);

            return categoria != null ? _mapper.Map<ListCategoriaDto>(categoria) : null;
        }

        public async Task<ListCategoriaDto> CreateCategoria(CreateCategoriaDto dto)
        {
            // Validar se o usuário existe
            var usuario = await _context.Usuarios.FindAsync(dto.UsuarioId);
            if (usuario == null)
                throw new KeyNotFoundException($"Usuário com ID {dto.UsuarioId} não encontrado");

            var categoria = _mapper.Map<CategoriaModel>(dto);
            _context.Categorias.Add(categoria);
            await _context.SaveChangesAsync();

            // Carregar relacionamento para retornar
            await _context.Entry(categoria).Reference(c => c.Usuario).LoadAsync();

            return _mapper.Map<ListCategoriaDto>(categoria);
        }

        public async Task<ListCategoriaDto> UpdateCategoria(UpdateCategoriaDto dto)
        {
            var categoria = await _context.Categorias.FindAsync(dto.Id);
            if (categoria == null)
                throw new KeyNotFoundException($"Categoria com ID {dto.Id} não encontrada");

            // Validar se o usuário existe
            var usuario = await _context.Usuarios.FindAsync(dto.UsuarioId);
            if (usuario == null)
                throw new KeyNotFoundException($"Usuário com ID {dto.UsuarioId} não encontrado");

            _mapper.Map(dto, categoria);
            await _context.SaveChangesAsync();

            // Carregar relacionamento para retornar
            await _context.Entry(categoria).Reference(c => c.Usuario).LoadAsync();

            return _mapper.Map<ListCategoriaDto>(categoria);
        }

        public async Task<bool> DeleteCategoria(int id)
        {
            var categoria = await _context.Categorias.FindAsync(id);
            if (categoria == null)
                return false;

            // Verificar se existem transações vinculadas
            var temTransacoes = await _context.Transacoes.AnyAsync(t => t.CategoriaId == id);
            if (temTransacoes)
            {
                throw new InvalidOperationException(
                    "Não é possível deletar esta categoria pois existem transações vinculadas a ela.");
            }

            _context.Categorias.Remove(categoria);
            await _context.SaveChangesAsync();
            return true;
        }

        public async Task<RelatorioTotaisPorCategoriaDto> GetRelatorioTotaisPorCategoria()
        {
            var categorias = await _context.Categorias
                .Include(c => c.Usuario)
                .ToListAsync();

            var todasTransacoes = await _context.Transacoes
                .Include(t => t.Categoria)
                .ToListAsync();

            var totaisPorCategoria = new List<TotalPorCategoriaDto>();
            decimal totalGeralReceitas = 0;
            decimal totalGeralDespesas = 0;

            foreach (var categoria in categorias)
            {
                var transacoesCategoria = todasTransacoes.Where(t => t.CategoriaId == categoria.Id).ToList();

                decimal receitas = 0;
                decimal despesas = 0;

                if (categoria.Finalidade == FinalidadeEnum.Receita)
                {
                    receitas = transacoesCategoria.Sum(t => t.Valor);
                }
                else if (categoria.Finalidade == FinalidadeEnum.Despesas)
                {
                    despesas = transacoesCategoria.Sum(t => t.Valor);
                }
                else if (categoria.Finalidade == FinalidadeEnum.Ambas)
                {
                    // Para categorias "Ambas", você pode precisar de lógica adicional
                    // Por enquanto, vou considerar como receita
                    receitas = transacoesCategoria.Sum(t => t.Valor);
                }

                var saldo = receitas - despesas;

                totaisPorCategoria.Add(new TotalPorCategoriaDto
                {
                    CategoriaId = categoria.Id,
                    NomeCategoria = categoria.Descricao,
                    TotalReceitas = receitas,
                    TotalDespesas = despesas,
                    Saldo = saldo
                });

                totalGeralReceitas += receitas;
                totalGeralDespesas += despesas;
            }

            return new RelatorioTotaisPorCategoriaDto
            {
                TotaisPorCategoria = totaisPorCategoria,
                TotalGeral = new TotalGeralDto
                {
                    TotalReceitas = totalGeralReceitas,
                    TotalDespesas = totalGeralDespesas,
                    SaldoLiquido = totalGeralReceitas - totalGeralDespesas
                }
            };
        }
    }
}
